%h1.edit-menu-header Edit Menu:
%form{action: '/login/admin_dashboard/menu/add_menu_item', method: 'GET'}
  %input{type: 'submit', value: '+'}
%table{border: "10"}
  - menu_items.each do |menu_item|
    %tr
      %td
        %form{action: "/login/admin_dashboard/menu/#{menu_item[:id]}", method: 'GET', style: 'display: inline'}
          %input{type: 'submit', value: 'edit'}
      %td= menu_item[:name]
      %td= menu_item[:ingredients]
      %td= menu_item[:price]
      %td
        %form{action: "/login/admin_dashboard/menu/#{menu_item[:id]}", method: 'POST', style: 'display: inline'}
          %input{name: '_method', type: 'hidden', value: 'DELETE'}
            %input{type: 'submit', value: 'delete'}
